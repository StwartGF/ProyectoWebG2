@model IEnumerable<ProyectoWebG2.Models.EstudianteCursoVM>
@{
    Layout = "_LayoutInterno";
    ViewData["Title"] = "Estudiantes del curso";
    var cursoId = ViewBag.CursoId as int? ?? 0;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0">Estudiantes</h2>
        <p class="text-muted mb-0">Listado de estudiantes matriculados en este curso.</p>
    </div>
    <div class="btn-group">
        <a class="btn btn-outline-secondary" asp-action="Asistencia" asp-route-cursoId="@cursoId">Tomar asistencia</a>
        <a class="btn btn-outline-success" asp-action="Calificaciones" asp-route-cursoId="@cursoId">Calificar</a>
    </div>
</div>

@if (TempData["Msg"] != null)
{
    <div class="alert alert-success">@TempData["Msg"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th>Correo</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var estudiante in Model)
                    {
                        <tr>
                            <td>@($"{estudiante.Nombre} {estudiante.Apellidos}")</td>
                            <td>@estudiante.Correo</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-center py-4 text-muted">
                            No hay estudiantes matriculados en este curso.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-outline-primary" asp-action="Index">Volver a cursos</a>
</div>
