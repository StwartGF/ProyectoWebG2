@model IEnumerable<ProyectoWebG2.Models.CursoInstructorVM>
@{
    Layout = "_LayoutInterno";
    ViewData["Title"] = "Mis cursos";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0">Mis cursos</h2>
        <p class="text-muted mb-0">Listado de cursos que impartes.</p>
    </div>
</div>

@if (TempData["Msg"] != null)
{
    <div class="alert alert-success">@TempData["Msg"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th>Curso</th>
                    <th>Inicio</th>
                    <th>Finalización</th>
                    <th>Modalidad</th>
                    <th>Categoría</th>
                    <th style="width:240px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var curso in Model)
                    {
                        <tr>
                            <td>@curso.NombreCurso</td>
                            <td>@curso.FechaDeInicio.ToShortDateString()</td>
                            <td>@curso.FechaDeFinalizacion.ToShortDateString()</td>
                            <td>@curso.Modalidad</td>
                            <td>@curso.Categoria</td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a class="btn btn-outline-primary" asp-action="Estudiantes" asp-route-cursoId="@curso.IdCurso">
                                        Ver estudiantes
                                    </a>
                                    <a class="btn btn-outline-secondary" asp-action="Asistencia" asp-route-cursoId="@curso.IdCurso">
                                        Tomar asistencia
                                    </a>
                                    <a class="btn btn-outline-success" asp-action="Calificaciones" asp-route-cursoId="@curso.IdCurso">
                                        Calificar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center py-4 text-muted">
                            No tienes cursos asignados aún.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
