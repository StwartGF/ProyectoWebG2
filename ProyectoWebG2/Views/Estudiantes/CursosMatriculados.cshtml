@model List<ProyectoWebG2.Models.CursoMatriculadoVM>
@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
    ViewData["Title"] = "Cursos Disponibles";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-journal-check"></i> Mis Cursos Matriculados</h2>
        <a href="@Url.Action("Index", "Estudiantes")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver al Panel
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No estás matriculado en ningún curso actualmente.
            <a href="@Url.Action("CursosDisponibles", "Estudiantes")" class="alert-link">
                Ver cursos disponibles
            </a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var curso in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm border-success">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">@curso.NombreCurso</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                <strong><i class="bi bi-person-badge"></i> Instructor:</strong><br />
                                @curso.NombreInstructor
                            </p>
                            <p class="card-text">
                                <strong><i class="bi bi-calendar-event"></i> Inicio:</strong> 
                                @curso.FechaDeInicio.ToString("dd/MM/yyyy")
                            </p>
                            <p class="card-text">
                                <strong><i class="bi bi-calendar-check"></i> Finalización:</strong> 
                                @curso.FechaDeFinalizacion.ToString("dd/MM/yyyy")
                            </p>
                            <p class="card-text">
                                <strong><i class="bi bi-clock"></i> Duración:</strong> 
                                @curso.DuracionCurso semanas
                            </p>
                            <p class="card-text">
                                <strong><i class="bi bi-tag"></i> Categoría:</strong> 
                                @curso.Categoria
                            </p>
                            <p class="card-text">
                                <strong><i class="bi bi-laptop"></i> Modalidad:</strong> 
                                @curso.Modalidad
                            </p>
                            @if (!string.IsNullOrEmpty(curso.DiaSemana))
                            {
                                <p class="card-text">
                                    <strong><i class="bi bi-alarm"></i> Horario:</strong><br />
                                    @curso.DiaSemana
                                    @if (curso.HoraInicio.HasValue && curso.HoraFin.HasValue)
                                    {
                                        <text><br />@curso.HoraInicio.Value.ToString(@"hh\:mm") - @curso.HoraFin.Value.ToString(@"hh\:mm")</text>
                                    }
                                </p>
                            }
                            <p class="card-text">
                                <strong><i class="bi bi-calendar-plus"></i> Fecha Matrícula:</strong> 
                                @curso.FechaMatricula.ToString("dd/MM/yyyy")
                            </p>
                            <p class="card-text">
                                <strong><i class="bi bi-check-circle"></i> Estado:</strong> 
                                <span class="badge bg-success">@curso.Estado</span>
                            </p>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-danger w-100"
                                    onclick="confirmarRenuncia(@curso.IdCurso, '@curso.NombreCurso')">
                                <i class="bi bi-x-circle"></i> Renunciar al Curso
                            </button>


                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
                function confirmarRenuncia(idCurso, nombreCurso) {
            if (confirm(`¿Está seguro que desea renunciar al curso "${nombreCurso}"?\n\nEsta acción restaurará el cupo del curso.`)) {
                fetch('@Url.Action("Renunciar", "Estudiantes")' + '?idCurso=' + idCurso, {
                    method: 'POST'
                })
                .then(response => response.json())
                .then(result => {
                    alert(result.message);
                    if (result.success) {
                        location.reload();
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error al renunciar al curso');
                });
            }
        }

    </script>
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}
