@model List<ProyectoWebG2.Models.CalificacionCursoVM>
@{
    ViewData["Title"] = "Mis Calificaciones";
    Layout = "_LayoutInterno";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center fw-bold">Mis Calificaciones</h2>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Curso</th>
                    <th>Calificación</th>
                    <th>Estado</th>
                    <th>Finalización</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NombreCurso</td>
                            <td>@(item.Calificacion.HasValue ? item.Calificacion.Value.ToString("0.00") : "-")</td>
                            <td>@item.EstadoCurso</td>
                            <td>@item.FechaFinalizacion?.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">No hay ninguna calificacion registrada</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
