@{
    Layout = "_LayoutExterno";
    ViewData["Title"] = "Registro";
}

<div class="auth-wrap">
    <div class="card mb-4 mx-0 shadow-sm" style="width:min(100%, 560px);">
        <div class="card-body p-4">
            <h1 class="h3 mb-1">Register</h1>
            <p class="text-body-secondary mb-4">Create your account</p>

            <form id="formRegister">
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input class="form-control" type="text" placeholder="tu_usuario" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input class="form-control" type="email" placeholder="you@example.com" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input class="form-control" type="password" placeholder="••••••" />
                </div>

                <div class="mb-4">
                    <label class="form-label">Repeat password</label>
                    <input class="form-control" type="password" placeholder="••••••" />
                </div>

                <!-- Solo navegación: regresamos a Login o vamos al “dashboard” -->
                <div class="d-grid gap-2">
                    <a class="btn btn-success" asp-controller="Home" asp-action="Index">Create Account</a>
                    <a class="btn btn-link" asp-controller="Home" asp-action="Login">¿Ya tienes cuenta? Inicia sesión</a>
                </div>
            </form>
        </div>
    </div>
</div>

