@model ProyectoWebG2.Models.UsuarioModel
@{
    Layout = "_LayoutExterno";
    ViewData["Title"] = "Registro";
}

<div class="auth-wrap">
    <div class="card mb-4 mx-0 shadow-sm" style="width:min(100%, 720px);">
        <div class="card-body p-4">
            <h1 class="h3 mb-1">Registro</h1>
            <p class="text-body-secondary mb-4">Crea tu cuenta</p>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <form asp-action="RegistroPost" asp-controller="Home" method="post" novalidate>
                <!-- Identificación -> @@Identificacion -->
                <div class="mb-3">
                    <label class="form-label" asp-for="Identificacion"></label>
                    <input class="form-control" asp-for="Identificacion" />
                    <span class="text-danger" asp-validation-for="Identificacion"></span>
                </div>

                <!-- Nombre -> @@Nombre -->
                <div class="mb-3">
                    <label class="form-label" asp-for="Nombre"></label>
                    <input class="form-control" asp-for="Nombre" />
                    <span class="text-danger" asp-validation-for="Nombre"></span>
                </div>

                <!-- Apellidos -> @@Apellidos -->
                <div class="mb-3">
                    <label class="form-label" asp-for="Apellidos"></label>
                    <input class="form-control" asp-for="Apellidos" />
                    <span class="text-danger" asp-validation-for="Apellidos"></span>
                </div>

                <!-- Correo -> @@CorreoElectronico -->
                <div class="mb-3">
                    <label class="form-label" asp-for="CorreoElectronico"></label>
                    <input class="form-control" asp-for="CorreoElectronico" />
                    <span class="text-danger" asp-validation-for="CorreoElectronico"></span>
                </div>

                <!-- Teléfono (opcional) -> @@Telefono -->
                <div class="mb-3">
                    <label class="form-label" asp-for="Telefono"></label>
                    <input class="form-control" asp-for="Telefono" />
                    <span class="text-danger" asp-validation-for="Telefono"></span>
                </div>

                <!-- Fecha de nacimiento (opcional) -> @@Fecha_Nacimiento -->
                <div class="mb-3">
                    <label class="form-label" asp-for="Fecha_Nacimiento"></label>
                    <input class="form-control" asp-for="Fecha_Nacimiento" type="date" />
                    <span class="text-danger" asp-validation-for="Fecha_Nacimiento"></span>
                </div>

                <!-- Nombre de usuario -> @@NombreUsuario -->
                <div class="mb-3">
                    <label class="form-label" asp-for="NombreUsuario"></label>
                    <input class="form-control" asp-for="NombreUsuario" />
                    <span class="text-danger" asp-validation-for="NombreUsuario"></span>
                </div>

                <!-- Contraseña -> @@Contrasena -->
                <div class="mb-3">
                    <label class="form-label" asp-for="Contrasena"></label>
                    <input class="form-control" asp-for="Contrasena" type="password" />
                    <span class="text-danger" asp-validation-for="Contrasena"></span>
                </div>

                <!-- Confirmar contraseña -> @@ContrasenaConfirmar -->
                <div class="mb-4">
                    <label class="form-label" asp-for="ContrasenaConfirmar"></label>
                    <input class="form-control" asp-for="ContrasenaConfirmar" type="password" />
                    <span class="text-danger" asp-validation-for="ContrasenaConfirmar"></span>
                </div>

                <div class="d-grid gap-2">
                    <button class="btn btn-success" type="submit">Crear cuenta</button>
                    <a class="btn btn-link" asp-controller="Home" asp-action="Index">¿Ya tienes cuenta? Inicia sesión</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
