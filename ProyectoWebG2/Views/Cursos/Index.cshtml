@model List<ProyectoWebG2.Models.Curso>

<div class="container mt-5">
    <h2 class="mb-4 text-center fw-bold">Catálogo de Cursos Disponibles</h2>

    <div class="row">
        @foreach (var curso in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow border-0 h-100">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="fw-bold text-primary">@curso.Nombre</h5>
                            <p>@curso.Descripcion</p>
                            <p><strong>Duración:</strong> @curso.Duracion</p>
                            <p><strong>Modalidad:</strong> @curso.Modalidad</p>
                            <p><strong>Fecha de inicio:</strong> @curso.FechaInicio</p>
                            <p><strong>Categoría:</strong> @curso.Categoria</p>
                        </div>
                        <div class="mt-3 d-flex justify-content-between">
                            <a href="#" class="btn btn-outline-primary">Más detalles</a>
                            <button class="btn btn-success btnMatricular"
                                    data-nombre="@curso.Nombre">
                                Matricular
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="modalMatricular" tabindex="-1" aria-labelledby="modalMatricularLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalMatricularLabel">Seleccionar horario</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-start">
                <p>Selecciona un horario disponible:</p>
                <div id="listaHorarios"></div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button class="btn btn-success" id="btnConfirmar" style="background-color:#4F1BBF; color: white">Matricular</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/Matricular.js"></script>
}
    