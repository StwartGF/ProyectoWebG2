@model ProyectoWebG2.Models.AsistenciaModel

@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 fw-bold text-danger">Eliminar Asistencia</h2>

    <p>¿Estás seguro que deseas eliminar este registro?</p>

    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.IdAsistencia</dd>

        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.IdUsuario</dd>

        <dt class="col-sm-2">Curso</dt>
        <dd class="col-sm-10">@Model.IdCurso</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.EstadoAsistencia</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="IdAsistencia" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
