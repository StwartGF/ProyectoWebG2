@model List<ProyectoWebG2.Models.AsistenciaModel>

@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Listado de Asistencia</h2>
        <a asp-action="Create" class="btn btn-primary">Nueva Asistencia</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Usuario</th>
                <th>Curso</th>
                <th>Fecha</th>
                <th>Estado</th>
                <th style="width:150px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.IdAsistencia</td>
                    <td>@a.IdUsuario</td>
                    <td>@a.IdCurso</td>
                    <td>@a.Fecha.ToString("yyyy-MM-dd")</td>
                    <td>@a.EstadoAsistencia</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@a.IdAsistencia" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Delete" asp-route-id="@a.IdAsistencia" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
