@{
    var title = ViewData["Title"] as string ?? "Auth";
}
<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@title - ProyectoWebG2</title>
  <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/@@coreui/coreui@5/dist/css/coreui.min.css" />

  <!-- Tus estilos (opcional) -->
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

  <style>
    /* Helpers para centrar el formulario a pantalla completa */
    .auth-wrap { min-height: 100vh; display: grid; place-items: center; background: var(--cui-tertiary-bg,#f5f7fb); }
    .auth-card { width: min(100%, 880px); }
  </style>
</head>
<body>
  @RenderBody()

  <!-- CoreUI JS -->
  <script src="https://cdn.jsdelivr.net/npm/@@coreui/coreui@5/dist/js/coreui.bundle.min.js" defer></script>

  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

